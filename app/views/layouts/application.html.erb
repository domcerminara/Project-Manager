<!DOCTYPE html>
<html>
  <head>
    <title>TeamBuilder :: <%= controller.controller_name.capitalize %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">

		<div id="header">
		<%= link_to image_tag("teambuilder_logo.svg", :alt => "TeamBuilder"), root_url, :title => 'TeamBuilder' %>
		</div>

    	
    	<div id='menu'>
    		<ul>
    			<% if current_user %>
    			<li><%= link_to 'Projects', projects_path %></li>
    			<li><%= link_to 'Skills', skills_path %></li>
          <li><%= link_to 'My Skills', user_skills_path %></li>
          <li><%= link_to 'My Projects', user_projects_path %></li>
    			<li><%= link_to 'logout', logout_path %></li>
    			<% end %>
    		</ul>
    	</div>

      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
	  
    </div>
  </body>
</html>
