<% title "Skill" %>

<p>
  <strong>Name:</strong>
  <%= @skill.name %>
</p>
<p>
  <strong>Level:</strong>
  <%= @skill.level %>
</p>
<p>
  <strong>Description:</strong>
  <%= @skill.description %>
</p>
<p>
  <%= button_to "Add This Skill To Your Inventory", { :action => "index", :controller => 'user_skills', :user_id => current_user.id, :skill_id => @skill.id }, :method => "create" %> 
</p>

<p>
  <%= link_to "Edit", edit_skill_path(@skill) %> |
  <%= link_to "Destroy", @skill, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", skills_path %>
</p>
